<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "Binstagram", photos_path, class: "btn btn-lg btn-success", id: "logo" %>
    <%= link_to "Users", users_path, class: "btn btn-lg btn-default", id: "users" %>
    <% if user_signed_in? %>
      <div class="nav-item">
        <%= link_to 'Profile', user_path(current_user), class: "btn btn-lg btn-default", id: "user-profile" %>
        <%= link_to 'Add a photo', new_photo_path, class: "btn btn-lg btn-success", id: "add-photo" %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-default btn-warning", id: "signout" %>
    </div>
      <% else %>
        <div class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: "btn btn-default btn-warning" %>
        </div>
        <div class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default btn-warning" %>
        </div>
        <div class="nav-item">
          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
        </div>
      <% end %>
  </div>
</header>