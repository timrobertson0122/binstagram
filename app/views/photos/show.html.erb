<div class="col-md-12">
  <div class="center">
    <p>
    <h1><%=@photo.name%></h1>
    </p>
    <%= gravatar_for @photo.user size: 200 %>
    <p>
    <h4><%= "Posted by #{@photo.user.email}" %></h4>
    </p>
    <h3 class='image'><%= image_tag @photo.image.url(:original), {:width => "500", :height => "500"}%></h3>
    <p><%=@photo.description %></p>
    <%= link_to "Like", photo_likes_path(@photo), class: 'likes-link' %>
  <span class="likes_count"> <%= @photo.likes.count %> </span> 
    <%= 'like'.pluralize(@photo.likes.count) %><br>
    <%= link_to "Comment", new_photo_comment_path(@photo) %></br>
    <% if @photo.comments.any? %>
      <h5>Comments for <%= @photo.name %></h5>
      <ul>
        <% @photo.comments.each do |comment| %>
          <li>
            <%= comment.thoughts %> - <h6><%= "Posted by #{comment.user_id}" %></h6>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>Be the first to comment on this photo</p>
    <% end %>
    <h3><%= link_to 'All Photos', photos_path, class: "btn btn-warning btn-small" %></h3>
  </div>
</div>
